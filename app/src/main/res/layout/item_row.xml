<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/chkBoxRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="1.5"
        android:scaleY="1.5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:buttonTint="#4BAF32"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05" />

    <TextView
        android:id="@+id/txtTaskRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="Is simply dummy text of the printing"
        app:layout_constraintBottom_toBottomOf="@id/chkBoxRow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.01"
        app:layout_constraintStart_toEndOf="@id/chkBoxRow"
        app:layout_constraintTop_toTopOf="@id/chkBoxRow" />

    <TextView
        android:id="@+id/txtHourRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15:00 pm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.03"
        app:layout_constraintStart_toStartOf="@id/chkBoxRow"
        app:layout_constraintTop_toBottomOf="@id/chkBoxRow"
        app:layout_constraintVertical_bias="0.01" />

    <TextView
        android:id="@+id/txtDateRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="23/08/1986"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.03"
        app:layout_constraintStart_toStartOf="@id/chkBoxRow"
        app:layout_constraintTop_toBottomOf="@id/txtHourRow"
        app:layout_constraintVertical_bias="0.05" />

    <ImageView
        android:id="@+id/imgDeleteRow"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginEnd="35dp"
        android:textAlignment="center"
        android:src="@drawable/trash"
        android:textStyle="bold"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2" />


</androidx.constraintlayout.widget.ConstraintLayout>